{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "brace-style": [true, "stroustrup"],
    "max-line-length": [
      130
    ],
    "no-consecutive-blank-lines": [true, 1],
    "one-line": [false],    
    "ter-indent": [true, 4],
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}]
  }
}
