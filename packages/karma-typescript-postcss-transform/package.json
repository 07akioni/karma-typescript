{
  "name": "karma-typescript-postcss-transform",
  "version": "5.0.1",
  "description": "PostCSS runner plugin",
  "files": [
    "dist/**"
  ],
  "main": "dist/transform.js",
  "keywords": [
    "karma-typescript",
    "postcss runner",
    "typescript"
  ],
  "author": "monounity",
  "contributors": [
    "erikbarke"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/monounity/karma-typescript.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "tslint --project tsconfig.json",
    "test": "nyc --require ts-node/register tape src/*.spec.ts | faucet"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "tempDir": "./coverage/.nyc_output"
  },
  "dependencies": {
    "log4js": "^6.1.0"
  },
  "devDependencies": {
    "@types/karma": "^3.0.5",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.4",
    "@types/sinon": "^7.5.1",
    "@types/tape": "^4.2.33",
    "autoprefixer": "^9.4.7",
    "faucet": "0.0.1",
    "karma-typescript": "5.0.1",
    "nyc": "^15.0.0",
    "postcss": "^7.0.26",
    "sinon": "^8.0.4",
    "tape": "^4.12.1",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "latest"
  }
}
