{
  "name": "karma-typescript-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for karma-typescript packages",
  "private": true,
  "author": "monounity",
  "repository": {
    "type": "git",
    "url": "https://github.com/monounity/karma-typescript.git"
  },
  "license": "MIT",
  "scripts": {
    "setup": "npm run setup:packages && npm run setup:examples",
    "setup:packages": "npm install && lerna bootstrap --hoist --no-ci",
    "setup:examples": "cd examples/angular2 && npm i && cd ../..",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:examples": "npm --prefix examples/angular2/ test",
    "ci": "npm run lint && npm run build && npm run test && node ci-install.js && npm run test:examples"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "lerna": "^3.4.3"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/karma-typescript",
    "logo": "https://opencollective.com/opencollective/logo.txt"
  }
}
