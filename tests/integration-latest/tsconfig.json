{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "tmp",
        "target": "ES5",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "compilerpaths/*": [ "src/typescript/compiler-paths/*" ],
            "compilerpaths-js/*": [ "node_modules/karma-typescript/dist/*" ],
            "@custom/*": ["./node_modules/*"]
        },
        "types" : [
            "codemirror",
            "core-js",
            "jasmine",
            "node",
            "react",
            "sinon"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["mode_noodles"]
}
